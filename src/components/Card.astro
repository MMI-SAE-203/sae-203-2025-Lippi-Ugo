---
import {Picture} from 'astro:assets';
const { title, description, image, alt, duotoneClass, lien} = Astro.props;
---

<article class="col-span-4 grid grid-cols-1 grid-rows-[auto_1fr] lg:grid-cols-[4fr_11fr] lg:grid-rows-1 mb-8">
    <Picture pictureAttributes={{class:`${duotoneClass} w-full h-auto rounded-xl`}} src={image} alt={alt} />
    <div class="z-[2] col-span-1 col-start-1 lg:col-start-2 row-start-2 lg:row-start-1 space-y-4 bg-white p-6">
        <h4 class="z-[1] col-start-1 row-start-1 my-6 mr-4 self-end font-mono text-3xl">{title}</h4>
        <p>{description}</p>
        <a class="inline-block border-b-2 border-black uppercase" href={lien}>Plus d'info</a>
    </div>
</article>